<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="600.0" stylesheets="@style/styleAuth.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.course.courseproject.Controllers.SignUpController">
   <children>
      <Pane prefHeight="100.0" prefWidth="600.0" style="-fx-background-color: rgba(0,0,0,0.95);">
         <children>
            <Label layoutX="190.0" layoutY="36.0" prefHeight="27.0" text="Окно регистрации" textFill="#889ab4">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Button fx:id="toSignInBtn" layoutX="500.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#signInBtnClicked" prefHeight="36.0" prefWidth="90.0" styleClass="buttonLog" text="Войти" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <Pane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #504c63;">
         <children>
            <ImageView fitHeight="500.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Media/portal_background_MT_600x500.jpg" />
               </image>
            </ImageView>
            <Label layoutX="264.0" layoutY="5.0" text="Логин" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="loginField" layoutX="200.0" layoutY="45.0" onMouseClicked="#labelHideLogin" prefHeight="40.0" prefWidth="200.0" />
            <Label fx:id="emptyField1" layoutX="202.0" layoutY="91.0" text="Логин не введен" visible="false">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="255.0" layoutY="126.0" text="Пароль">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <PasswordField fx:id="passField" layoutX="200.0" layoutY="166.0" onMouseClicked="#labelHidePass" prefHeight="40.0" prefWidth="200.0" />
            <Label fx:id="emptyField2" layoutX="194.0" layoutY="214.0" text="Пароль не введен" visible="false">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label layoutX="158.0" layoutY="247.0" text="Подтверждение пароля">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <PasswordField fx:id="passConfField" layoutX="200.0" layoutY="287.0" onMouseClicked="#labelHidePassConf" prefHeight="40.0" prefWidth="200.0" />
            <Label fx:id="incorrectLabel" layoutX="175.0" layoutY="343.0" text="Пароль не совпадает" visible="false">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="incorrectLogin" layoutX="79.0" layoutY="90.0" text="Такой пользователь уже существует" textFill="RED" visible="false" />
            <Button fx:id="signUpBtn" layoutX="150.0" layoutY="402.0" mnemonicParsing="false" onMouseClicked="#signUpBtnClicked" prefHeight="60.0" prefWidth="300.0" text="Зарегистрироваться" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</VBox>
