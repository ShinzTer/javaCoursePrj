<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="500.0" prefWidth="600.0" stylesheets="@style/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.course.courseproject.Controllers.SignUpController">
   <children>
      <Pane prefHeight="100.0" prefWidth="600.0" style="-fx-background-color: rgba(0,0,0,0.95);">
         <children>
            <Label layoutX="190.0" layoutY="30.0" text="Окно регистрации" textFill="#889ab4">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Button fx:id="toSignInBtn" layoutX="500.0" layoutY="10.0" mnemonicParsing="false" onMouseClicked="#signInBtnClicked" prefHeight="36.0" prefWidth="90.0" style="-fx-background-color: rgba(0, 0, 0, 0); -fx-border-color: white; -fx-border-radius: 10px; -fx-border-width: 2px;" text="Войти" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </Pane>
      <Pane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #504c63;">
         <children>
            <ImageView fitHeight="400.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@Media/portal_background_MT_600x400.jpg" />
               </image>
            </ImageView>
            <Label layoutX="264.0" layoutY="20.0" text="Логин" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="loginField" layoutX="200.0" layoutY="60.0" prefHeight="40.0" prefWidth="200.0" />
            <Label layoutX="255.0" layoutY="120.0" text="Пароль">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <PasswordField fx:id="passField" layoutX="200.0" layoutY="160.0" prefHeight="40.0" prefWidth="200.0" />
            <Label layoutX="158.0" layoutY="220.0" text="Подтверждение пароля">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <PasswordField fx:id="passConfField" layoutX="200.0" layoutY="260.0" prefHeight="40.0" prefWidth="200.0" />
            <Button fx:id="signUpBtn" layoutX="150.0" layoutY="320.0" mnemonicParsing="false" onMouseClicked="#signUpBtnClicked" prefHeight="60.0" prefWidth="300.0" style="-fx-background-color: rgba(0, 0, 0, 0); -fx-border-color: white; -fx-border-radius: 10px; -fx-border-width: 3px;" text="Зарегистрироваться" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </children>
</VBox>
